@using ASP.NetCoreMVC_SchoolSystem.DTO
@model SubjectDTO

<h1 class="text-center">Create a new subject</h1>
<form asp-action="Create" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label class="form-label" asp-for="Name">Name of subject:</label>
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-warning my-2">Create</button>
	<button type="reset" class="btn btn-danger my-2">Reset</button>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
